<div class='flex items-center lg:hidden'>
	<button
		type='button'
		class='mobile-btn relative inline-flex items-center justify-center rounded-md text-blk focus:outline-none
              aria-controls='
		mobile-menu'
		aria-expanded='false'
	>
		<!-- Hamburger Icon -->
		<svg
			class='hamburger block h-12 w-12'
			fill='none'
			viewBox='0 0 24 24'
			stroke-width='1.5'
			stroke='currentColor'
			aria-hidden='true'
		>
			<path
				stroke-linecap='round'
				stroke-linejoin='round'
				d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5'></path>
		</svg>

		<!-- Close Icon -->
		<svg
			class='close hidden h-12 w-12'
			fill='none'
			viewBox='0 0 24 24'
			stroke-width='1.5'
			stroke='currentColor'
			aria-hidden='true'
		>
			<path
				stroke-linecap='round'
				stroke-linejoin='round'
				d='M6 18L18 6M6 6l12 12'></path>
		</svg>
	</button>
</div>
