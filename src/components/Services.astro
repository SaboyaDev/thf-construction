---
import ServiceCard from "./ServiceCard.astro";
---

<section class="bg-light-gray flex flex-col py-16 items-center">
    <h3 class="uppercase tracking-widest text-neutral-500 text-lg mb-3 ">Our Services</h3>
    <h4 class="text-xs sm:text-lg md:text-2xl lg:text-3xl font-bold w-1/3 text-center mb-6">Explore how we can <span
            class="text-orange-500">transform</span>
        your home.</h4>
    <section class="w-full flex flex-wrap flex-row justify-center gap-10">
        <ServiceCard title="Kitchens" imageUrl="src/images/carousel/02-slide.jpg" link="#"/>
        <ServiceCard title="Basements" imageUrl="src/images/carousel/09-slide.jpg" link="#"/>
        <ServiceCard title="Bathrooms" imageUrl="src/images/carousel/07-slide.jpg" link="#"/>
        <ServiceCard title="Media Rooms" imageUrl="src/images/carousel/03-slide.jpg" link="#"/>
        <ServiceCard title="Full Renovations" imageUrl="src/images/carousel/01-slide.jpg" link="#"/>
    </section>
</section>